{
  "name": "electrichasgoneaudi-website",
  "version": "1.0.0",
  "description": "Electric has gone Audi - Hugo website with Tailwind CSS",
  "scripts": {
    "build-css": "tailwindcss -i ./src/input.css -o ./static/css/tailwind.css --watch",
    "build-css-prod": "tailwindcss -i ./src/input.css -o ./static/css/tailwind.css --minify",
    "dev": "concurrently \"npm run build-css\" \"hugo server --disableFastRender\"",
    "build": "npm run build-css-prod && hugo --minify",
    "css-watch": "tailwindcss -i ./src/input.css -o ./static/css/tailwind.css --watch"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "concurrently": "^8.2.2",
    "tailwindcss": "^3.4.0"
  }
}